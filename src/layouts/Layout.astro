---
interface Props {
	title: string;
}
const { title } = Astro.props;

import Logo from "../assets/png-clipart-javascript-scalable-graphics-logo-encapsulated-postscript-javascript-icon-text-logo.png"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/js-logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="w-full h-[20vh] text-slate-100 font-semibold bg-[#09266c] text-3xl flex items-center pl-8" >
			<h1>Auxiliados</h1>
		</header>
		<main>
			<slot />
		</main>
		<footer class="w-full h-24 text-lg text-slate-100 bg-black flex justify-center items-center" >
			<p>Derechos reservados</p>
		</footer>
	</body>
</html>